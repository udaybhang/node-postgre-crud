<%- include ../layouts/header.ejs %>
<div class="page-data">
    <form method="post" action="/customers/edit/<%=data[0].id%>">
        <table cellpadding="11">
            <tr>
                <td class="label">Name</td>
                <td><input type="text" name="name" value="<%=data[0].name%>" required /></td>
            </tr>
            <tr>
                <td class="label">Age</td>
                <td><textarea name="age" required cols="30" rows="5"><%=data[0].age%></textarea></td>
            </tr>
            <tr>
                <td class="label">Address</td>
                <td><input type="text" value="<%=data[0].address%>" name="address" required /></td>
            </tr>
            <tr>
                <td class="label"></td>
                <td>
                    <button type="submit">Save</button>
                    <button type="button" onClick="cancelAdd()">Cancel</button>
                </td>
            </tr>
        </table>
    </form> 
</div>
<%- include ../layouts/footer.ejs %>
